-- iSights Hypershot Utility with Apex Settings UI (identical style)
-- Made by Isight Zyx & Imran

-- Load cooldown bypass core
loadstring(game:HttpGet("https://rawscripts.net/raw/NEW!-Hypershot-(Gunfight)-No-Ability-Cooldown-Open-Sourced-47339"))()

local CoreGui = game:GetService("CoreGui")
local TweenService = game:GetService("TweenService")
local UIS = game:GetService("UserInputService")

local gui = Instance.new("ScreenGui")
gui.Name = "iSightsApexUI"
gui.ResetOnSpawn = false
gui.Parent = CoreGui

-- Main Apex window
local win = Instance.new("Frame")
win.Size = UDim2.new(0,600,0,420)
win.Position = UDim2.new(0.5,-300,0.5,-210)
win.BackgroundColor3 = Color3.fromRGB(28,28,48)
win.BackgroundTransparency = 0.15
win.BorderSizePixel = 0
win.Active = true
win.Draggable = true
win.Parent = gui
Instance.new("UICorner", win).CornerRadius = UDim.new(0,6)
local stroke = Instance.new("UIStroke", win)
stroke.Color = Color3.fromRGB(80,70,130)
stroke.Thickness = 1.5

-- Title bar
local titleBar = Instance.new("Frame", win)
titleBar.Size = UDim2.new(1,0,0,40)
titleBar.BackgroundTransparency = 1

local titleTxt = Instance.new("TextLabel", titleBar)
titleTxt.Size = UDim2.new(1,-100,1,0)
titleTxt.Position = UDim2.new(0,20,0,0)
titleTxt.Text = "iSights Hypershot Utility"
titleTxt.Font = Enum.Font.GothamBold
titleTxt.TextSize = 22
titleTxt.TextColor3 = Color3.fromRGB(235,235,255)
titleTxt.BackgroundTransparency = 1
titleTxt.TextXAlignment = Enum.TextXAlignment.Left

-- Close & Minimize
local btnClose = Instance.new("TextButton", titleBar)
btnClose.Size = UDim2.new(0,40,0,40)
btnClose.Position = UDim2.new(1,-50,0,0)
btnClose.Text = "✕"
btnClose.Font = Enum.Font.GothamBold
btnClose.TextSize = 20
btnClose.TextColor3 = Color3.fromRGB(255,90,90)
btnClose.BackgroundTransparency = 1

local btnMin = Instance.new("TextButton", titleBar)
btnMin.Size = UDim2.new(0,40,0,40)
btnMin.Position = UDim2.new(1,-100,0,0)
btnMin.Text = "–"
btnMin.Font = Enum.Font.GothamBold
btnMin.TextSize = 20
btnMin.TextColor3 = Color3.fromRGB(180,180,255)
btnMin.BackgroundTransparency = 1

local minimized = false
btnMin.MouseButton1Click:Connect(function()
    minimized = not minimized
    for _, c in ipairs(win:GetChildren()) do
        if c ~= titleBar then c.Visible = not minimized end
    end
end)

btnClose.MouseButton1Click:Connect(function()
    if _G.AutoFarmConnection then _G.AutoFarmConnection:Disconnect() end
    _G.RunAutoFarm = false
    gui:Destroy()
end)

-- Apex Settings panel content
local panel = Instance.new("Frame", win)
panel.Size = UDim2.new(1,-40,1,-60)
panel.Position = UDim2.new(0,20,0,50)
panel.BackgroundColor3 = Color3.fromRGB(36,34,56)
panel.BorderSizePixel = 0
Instance.new("UICorner", panel).CornerRadius = UDim.new(0,4)

-- "Settings" header label
local head = Instance.new("TextLabel", panel)
head.Size = UDim2.new(1,0,0,30)
head.Position = UDim2.new(0,0,0,10)
head.Text = "Settings"
head.Font = Enum.Font.GothamBold
head.TextSize = 18
head.TextColor3 = Color3.fromRGB(200,200,255)
head.BackgroundTransparency = 1
head.TextXAlignment = Enum.TextXAlignment.Left
head.Padding = Instance.new("UIPadding", head)
head.Padding.PaddingLeft = UDim.new(0,10)

-- Auto Farm toggle button
local toggleBtn = Instance.new("TextButton", panel)
toggleBtn.Size = UDim2.new(0,280,0,50)
toggleBtn.Position = UDim2.new(0.5,-140,0,60)
toggleBtn.BackgroundColor3 = Color3.fromRGB(70,60,110)
toggleBtn.Text = "Auto Farm: OFF"
toggleBtn.Font = Enum.Font.GothamBold
toggleBtn.TextSize = 18
toggleBtn.TextColor3 = Color3.new(1,1,1)
Instance.new("UICorner", toggleBtn).CornerRadius = UDim.new(0,6)

local function stopFarm()
    if _G.AutoFarmConnection then _G.AutoFarmConnection:Disconnect() end
    _G.RunAutoFarm = false
    toggleBtn.Text = "Auto Farm: OFF"
    toggleBtn.BackgroundColor3 = Color3.fromRGB(70,60,110)
end

local function startFarm()
    _G.RunAutoFarm = true
    toggleBtn.Text = "Auto Farm: ON"
    toggleBtn.BackgroundColor3 = Color3.fromRGB(90,140,80)
    local s = loadstring(game:HttpGet("https://rawscripts.net/raw/NEW!-Hypershot-(Gunfight)-Bring-All-Players-And-Bots-Open-Source-47412"))()
    _G.AutoFarmConnection = s
end

toggleBtn.MouseButton1Click:Connect(function()
    if _G.RunAutoFarm then stopFarm() else startFarm() end
end)

-- Hover animations exactly like Apex style
toggleBtn.MouseEnter:Connect(function()
    TweenService:Create(toggleBtn, TweenInfo.new(0.15), {BackgroundColor3 = Color3.fromRGB(80,70,130)}):Play()
end)
toggleBtn.MouseLeave:Connect(function()
    TweenService:Create(toggleBtn, TweenInfo.new(0.15), {BackgroundColor3 = (_G.RunAutoFarm and Color3.fromRGB(90,140,80) or Color3.fromRGB(70,60,110))}):Play()
end)
