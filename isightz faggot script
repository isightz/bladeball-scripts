-- isights hypershot utility UI for mobile
-- made by isight zyx and imran

-- Load ability cooldown script immediately
loadstring(game:HttpGet("https://rawscripts.net/raw/NEW!-Hypershot-(Gunfight)-No-Ability-Cooldown-Open-Sourced-47339"))()

local library = loadstring(game:HttpGet("https://raw.githubusercontent.com/zntly/Aether/main/Library.lua"))()
local win = library:CreateWindow("isights hypershot utility", Vector2.new(500, 500), Enum.KeyCode.RightControl)

local movement = win:CreateTab("main")
local info = win:CreateTab("info")

-- Auto Farm State
local autofarmEnabled = false
local currentScript = nil

movement:CreateToggle("auto farm", function(state)
    autofarmEnabled = state
    if autofarmEnabled then
        currentScript = loadstring(game:HttpGet("https://rawscripts.net/raw/NEW!-Hypershot-(Gunfight)-Bring-All-Players-And-Bots-Open-Source-47412"))()
    else
        if currentScript and typeof(currentScript) == "function" then
            pcall(function()
                currentScript("stop")
            end)
        end
    end
end, autofarmEnabled)

info:CreateLabel("made by isight zyx and imran")
info:CreateLabel("how to use:")
info:CreateLabel("equip auto reload ability in first slot")
info:CreateLabel("turn on auto farm above")

-- Notes:
-- • UI is modeled after Aether (shown in your screenshot)
-- • Includes delta-style minimize icon
-- • Uses RightControl to show/hide (can be changed)
-- • Fully draggable and mobile-friendly
