local clickPos = nil

setPosBtn.MouseButton1Click:Connect(function()
    setPosBtn.Text = "Waiting for position..."
    local conn
    conn = UserInputService.InputBegan:Connect(function(input)
        if input.UserInputType == Enum.UserInputType.MouseButton1 then
            clickPos = UserInputService:GetMouseLocation() - Vector2.new(0, 36)
            setPosBtn.Text = "Position Set: (" .. clickPos.X .. ", " .. clickPos.Y .. ")"
            conn:Disconnect()
        end
    end)
end)

runBtn.MouseButton1Click:Connect(function()
    if not clickPos then return end
    local delay = tonumber(delayBox.Text) or 1
    local count = tonumber(countBox.Text) or 10
    for i = 1, count do
        if not clickPos then break end
        mouse1click()
        wait(delay)
    end
end)

