-- iSights Hypershot Utility - Made by isight zyx and imran

-- Auto-load cooldown script
loadstring(game:HttpGet("https://rawscripts.net/raw/NEW!-Hypershot-(Gunfight)-No-Ability-Cooldown-Open-Sourced-47339"))()

local UIS = game:GetService("UserInputService")
local TweenService = game:GetService("TweenService")

local gui = Instance.new("ScreenGui", game.CoreGui)
gui.Name = "iSightsHypershotUI"
gui.ResetOnSpawn = false
gui.ZIndexBehavior = Enum.ZIndexBehavior.Sibling

-- Main Frame
local main = Instance.new("Frame")
main.Size = UDim2.new(0, 480, 0, 320)
main.Position = UDim2.new(0.5, -240, 0.5, -160)
main.BackgroundColor3 = Color3.fromRGB(80, 70, 110)
main.BackgroundTransparency = 0.05
main.BorderSizePixel = 0
main.Name = "MainUI"
main.Parent = gui

-- UIStroke for outline
local stroke = Instance.new("UIStroke")
stroke.Color = Color3.fromRGB(60, 40, 100)
stroke.Thickness = 2
stroke.Parent = main

-- Tab Frame (left)
local tabFrame = Instance.new("Frame", main)
tabFrame.Size = UDim2.new(0, 120, 1, 0)
tabFrame.Position = UDim2.new(0, 0, 0, 0)
tabFrame.BackgroundColor3 = Color3.fromRGB(70, 60, 90)
tabFrame.BorderSizePixel = 0

-- Tabs
local tabs = {
	{title = "main"},
	{title = "info"},
}

for i, v in ipairs(tabs) do
	local tab = Instance.new("TextButton", tabFrame)
	tab.Size = UDim2.new(1, 0, 0, 40)
	tab.Position = UDim2.new(0, 0, 0, (i-1)*40)
	tab.Text = "+ " .. v.title
	tab.TextColor3 = Color3.new(1,1,1)
	tab.Font = Enum.Font.GothamBold
	tab.TextSize = 14
	tab.BackgroundColor3 = Color3.fromRGB(50, 40, 80)
	tab.Name = "Tab_" .. v.title

	tab.MouseButton1Click:Connect(function()
		for _, p in ipairs(main:GetChildren()) do
			if p:IsA("Frame") and p.Name:match("^Page_") then
				p.Visible = false
			end
		end
		main:FindFirstChild("Page_"..v.title).Visible = true
	end)
end

-- Info Page
local info = Instance.new("Frame", main)
info.Name = "Page_info"
info.Visible = true
info.Position = UDim2.new(0, 120, 0, 0)
info.Size = UDim2.new(1, -120, 1, 0)
info.BackgroundColor3 = Color3.fromRGB(90, 80, 120)
info.BorderSizePixel = 0

local infoLabel = Instance.new("TextLabel", info)
infoLabel.Size = UDim2.new(1, -20, 1, -20)
infoLabel.Position = UDim2.new(0, 10, 0, 10)
infoLabel.BackgroundTransparency = 1
infoLabel.TextColor3 = Color3.new(1, 1, 1)
infoLabel.TextWrapped = true
infoLabel.TextXAlignment = Enum.TextXAlignment.Left
infoLabel.TextYAlignment = Enum.TextYAlignment.Top
infoLabel.Font = Enum.Font.Gotham
infoLabel.TextSize = 15
infoLabel.Text = "Made by isight zyx and imran\n\nHow to use:\n> Go to main tab\n> Turn ON Auto Farm\n> Make sure 'Auto Reload' ability is in SLOT 1!"

-- Main Page
local mainPage = Instance.new("Frame", main)
mainPage.Name = "Page_main"
mainPage.Visible = false
mainPage.Position = UDim2.new(0, 120, 0, 0)
mainPage.Size = UDim2.new(1, -120, 1, 0)
mainPage.BackgroundColor3 = Color3.fromRGB(90, 80, 120)
mainPage.BorderSizePixel = 0

local autoBtn = Instance.new("TextButton", mainPage)
autoBtn.Size = UDim2.new(0, 180, 0, 50)
autoBtn.Position = UDim2.new(0.5, -90, 0.4, 0)
autoBtn.Text = "Auto Farm: OFF"
autoBtn.Font = Enum.Font.GothamBold
autoBtn.TextSize = 15
autoBtn.TextColor3 = Color3.fromRGB(255, 255, 255)
autoBtn.BackgroundColor3 = Color3.fromRGB(60, 50, 100)
autoBtn.AutoButtonColor = false

local autoFarmOn = false
local autoScript

autoBtn.MouseButton1Click:Connect(function()
	autoFarmOn = not autoFarmOn
	if autoFarmOn then
		autoBtn.Text = "Auto Farm: ON"
		autoBtn.BackgroundColor3 = Color3.fromRGB(80, 120, 80)
		autoScript = loadstring(game:HttpGet("https://rawscripts.net/raw/NEW!-Hypershot-(Gunfight)-Bring-All-Players-And-Bots-Open-Source-47412"))()
	else
		autoBtn.Text = "Auto Farm: OFF"
		autoBtn.BackgroundColor3 = Color3.fromRGB(60, 50, 100)
		autoScript = nil
	end
end)

-- Minimize Button
local minBtn = Instance.new("TextButton", main)
minBtn.Size = UDim2.new(0, 30, 0, 30)
minBtn.Position = UDim2.new(1, -35, 0, 5)
minBtn.Text = "–"
minBtn.Font = Enum.Font.GothamBold
minBtn.TextSize = 20
minBtn.TextColor3 = Color3.new(1, 1, 1)
minBtn.BackgroundColor3 = Color3.fromRGB(50, 40, 80)
minBtn.AutoButtonColor = false

-- Minimized Icon Button (Letter “i” for iSight)
local iconBtn = Instance.new("TextButton", gui)
iconBtn.Size = UDim2.new(0, 50, 0, 50)
iconBtn.Position = UDim2.new(0, 20, 1, -70)
iconBtn.Text = "i"
iconBtn.Visible = false
iconBtn.Font = Enum.Font.GothamBold
iconBtn.TextSize = 28
iconBtn.TextColor3 = Color3.new(1, 1, 1)
iconBtn.BackgroundColor3 = Color3.fromRGB(80, 60, 130)
iconBtn.AutoButtonColor = false
local iconStroke = Instance.new("UIStroke", iconBtn)
iconStroke.Color = Color3.fromRGB(60, 40, 90)
iconStroke.Thickness = 2

minBtn.MouseButton1Click:Connect(function()
	main.Visible = false
	iconBtn.Visible = true
end)
iconBtn.MouseButton1Click:Connect(function()
	main.Visible = true
	iconBtn.Visible = false
end)
