-- iSights Hypershot Utility UI Clone (Aether Style)
-- Made by Isight Zyx + Imran

-- Load cooldown bypass on launch
loadstring(game:HttpGet("https://rawscripts.net/raw/NEW!-Hypershot-(Gunfight)-No-Ability-Cooldown-Open-Sourced-47339"))()

local CoreGui = game:GetService("CoreGui")
local TweenService = game:GetService("TweenService")

-- GUI container
local gui = Instance.new("ScreenGui")
gui.Name = "iSightsHypershotUtility"
gui.ResetOnSpawn = false
gui.Parent = CoreGui

-- Main window
local main = Instance.new("Frame")
main.Size = UDim2.new(0, 640, 0, 420)
main.Position = UDim2.new(0.5, -320, 0.5, -210)
main.BackgroundColor3 = Color3.fromRGB(25, 20, 40)
main.BackgroundTransparency = 0.3
main.BorderSizePixel = 0
main.Active = true
main.Draggable = true
main.Parent = gui

Instance.new("UICorner", main).CornerRadius = UDim.new(0, 8)

local stroke = Instance.new("UIStroke", main)
stroke.Thickness = 1.5
stroke.Color = Color3.fromRGB(80, 70, 120)

-- Title bar
local title = Instance.new("TextLabel", main)
title.Size = UDim2.new(1, -80, 0, 40)
title.Position = UDim2.new(0, 10, 0, 0)
title.Text = "iSights Hypershot Utility"
title.TextColor3 = Color3.new(1, 1, 1)
title.Font = Enum.Font.GothamBold
title.TextSize = 20
title.BackgroundTransparency = 1
title.TextXAlignment = Enum.TextXAlignment.Left

-- Close button
local closeBtn = Instance.new("TextButton", main)
closeBtn.Size = UDim2.new(0, 40, 0, 40)
closeBtn.Position = UDim2.new(1, -50, 0, 0)
closeBtn.Text = "X"
closeBtn.Font = Enum.Font.GothamBold
closeBtn.TextSize = 18
closeBtn.TextColor3 = Color3.fromRGB(255, 90, 90)
closeBtn.BackgroundTransparency = 1

closeBtn.MouseButton1Click:Connect(function()
    gui:Destroy()
    if _G.AutoFarmConnection then _G.AutoFarmConnection:Disconnect() end
    _G.RunAutoFarm = false
end)

-- Left nav bar
local nav = Instance.new("Frame", main)
nav.Size = UDim2.new(0, 140, 1, -40)
nav.Position = UDim2.new(0, 0, 0, 40)
nav.BackgroundColor3 = Color3.fromRGB(30, 26, 50)
nav.BorderSizePixel = 0
Instance.new("UICorner", nav).CornerRadius = UDim.new(0, 8)

-- Pages container
local pages = {}
local tabList = {
    {Name = "Info"},
    {Name = "Main"},
}

for i, tab in ipairs(tabList) do
    local btn = Instance.new("TextButton", nav)
    btn.Size = UDim2.new(1, 0, 0, 40)
    btn.Position = UDim2.new(0, 0, 0, (i - 1) * 42)
    btn.BackgroundColor3 = Color3.fromRGB(40, 35, 65)
    btn.Text = tab.Name
    btn.Font = Enum.Font.Gotham
    btn.TextSize = 16
    btn.TextColor3 = Color3.new(1, 1, 1)
    btn.BorderSizePixel = 0
    Instance.new("UICorner", btn).CornerRadius = UDim.new(0, 6)

    local page = Instance.new("Frame", main)
    page.Name = "Page_" .. tab.Name
    page.Size = UDim2.new(1, -150, 1, -50)
    page.Position = UDim2.new(0, 150, 0, 50)
    page.BackgroundTransparency = 1
    page.Visible = (i == 1)
    pages[tab.Name] = page

    btn.MouseButton1Click:Connect(function()
        for _, p in pairs(pages) do p.Visible = false end
        page.Visible = true
    end)
end

-- INFO PAGE
local info = Instance.new("TextLabel", pages.Info)
info.Size = UDim2.new(1, -20, 1, -20)
info.Position = UDim2.new(0, 10, 0, 10)
info.Text = [[
Made by Isight Zyx and Imran

Instructions:
- Go to "Main" tab
- Enable Auto Farm
- Ability Slot 1 must be "Auto Reload"
- Toggling OFF disables all functions
]]
info.Font = Enum.Font.Gotham
info.TextSize = 16
info.TextColor3 = Color3.new(1, 1, 1)
info.TextWrapped = true
info.TextXAlignment = Enum.TextXAlignment.Left
info.TextYAlignment = Enum.TextYAlignment.Top
info.BackgroundTransparency = 1

-- MAIN PAGE
local toggleBtn = Instance.new("TextButton", pages.Main)
toggleBtn.Size = UDim2.new(0, 280, 0, 60)
toggleBtn.Position = UDim2.new(0.5, -140, 0.3, 0)
toggleBtn.BackgroundColor3 = Color3.fromRGB(60, 50, 100)
toggleBtn.Text = "Auto Farm: OFF"
toggleBtn.Font = Enum.Font.GothamBold
toggleBtn.TextSize = 20
toggleBtn.TextColor3 = Color3.new(1, 1, 1)
Instance.new("UICorner", toggleBtn).CornerRadius = UDim.new(0, 10)

local function stopFarm()
    if _G.AutoFarmConnection then _G.AutoFarmConnection:Disconnect() end
    _G.RunAutoFarm = false
    toggleBtn.Text = "Auto Farm: OFF"
    toggleBtn.BackgroundColor3 = Color3.fromRGB(60, 50, 100)
end

local function startFarm()
    _G.RunAutoFarm = true
    toggleBtn.Text = "Auto Farm: ON"
    toggleBtn.BackgroundColor3 = Color3.fromRGB(70, 130, 70)
    local s = loadstring(game:HttpGet("https://rawscripts.net/raw/NEW!-Hypershot-(Gunfight)-Bring-All-Players-And-Bots-Open-Source-47412"))
    s()
end

toggleBtn.MouseButton1Click:Connect(function()
    if _G.RunAutoFarm then
        stopFarm()
    else
        startFarm()
    end
end)
