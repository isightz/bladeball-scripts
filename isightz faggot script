-- iSights Hypershot Utility (Perfect Clone)  
-- Made by Isight Zyx and Imran  
-- Auto‑load cooldown bypass / Auto Farm Utility

local CoreGui       = game:GetService("CoreGui")
local TweenService  = game:GetService("TweenService")
local RunService    = game:GetService("RunService")

-- Load bypass first
loadstring(game:HttpGet("https://rawscripts.net/raw/NEW!-Hypershot-(Gunfight)-No-Ability-Cooldown-Open-Sourced-47339"))()

-- Create ScreenGui
local gui = Instance.new("ScreenGui")
gui.Name = "iSightsHypershotUtility"
gui.ResetOnSpawn = false
gui.Parent = CoreGui

-- Main window
local main = Instance.new("Frame")
main.Name = "MainWindow"
main.Size = UDim2.new(0, 520, 0, 360)
main.Position = UDim2.new(0.5, -260, 0.5, -180)
main.BackgroundColor3 = Color3.fromRGB(30, 28, 50)
main.BorderSizePixel = 0
main.Active = true
main.Draggable = true
main.Parent = gui
Instance.new("UICorner", main).CornerRadius = UDim.new(0,12)

-- Gradient background
local gradient = Instance.new("UIGradient", main)
gradient.Color = ColorSequence.new{
    ColorSequenceKeypoint.new(0, Color3.fromRGB(60, 45, 110)),
    ColorSequenceKeypoint.new(1, Color3.fromRGB(35, 25, 75))
}
gradient.Rotation = 90

-- Border stroke
local stroke = Instance.new("UIStroke", main)
stroke.Color = Color3.fromRGB(85, 75, 140)
stroke.Thickness = 2

-- Title label
local title = Instance.new("TextLabel", main)
title.Size = UDim2.new(1, 0, 0, 50)
title.Position = UDim2.new(0, 0, 0, 0)
title.BackgroundTransparency = 1
title.Text = "iSights Hypershot Utility"
title.Font = Enum.Font.GothamBold
title.TextSize = 24
title.TextColor3 = Color3.new(1,1,1)
title.TextYAlignment = Enum.TextYAlignment.Center

-- Close button
local closeBtn = Instance.new("TextButton", main)
closeBtn.Size = UDim2.new(0, 30, 0, 30)
closeBtn.Position = UDim2.new(1, -35, 0, 10)
closeBtn.Text = "X"
closeBtn.Font = Enum.Font.GothamBold
closeBtn.TextSize = 18
closeBtn.TextColor3 = Color3.fromRGB(255, 90, 90)
closeBtn.BackgroundColor3 = Color3.fromRGB(55, 45, 80)
Instance.new("UICorner", closeBtn).CornerRadius = UDim.new(1,0)

closeBtn.MouseButton1Click:Connect(function()
    gui:Destroy()
    if _G.AutoFarmConnection then
        _G.AutoFarmConnection:Disconnect()
    end
    _G.RunAutoFarm = false
end)

-- Tab panel
local tabPanel = Instance.new("Frame", main)
tabPanel.Size = UDim2.new(0, 150, 1, -60)
tabPanel.Position = UDim2.new(0, 0, 0, 60)
tabPanel.BackgroundColor3 = Color3.fromRGB(26, 24, 44)
tabPanel.BorderSizePixel = 0
Instance.new("UICorner", tabPanel).CornerRadius = UDim.new(0,8)

-- Pages container
local pages = {}

-- Tab definitions
local tabNames = {"Info", "Main"}
for idx, name in ipairs(tabNames) do
    -- Button
    local btn = Instance.new("TextButton", tabPanel)
    btn.Name = "TabBtn_"..name
    btn.Size = UDim2.new(1, 0, 0, 40)
    btn.Position = UDim2.new(0, 0, 0, (idx-1)*40)
    btn.Text = name
    btn.Font = Enum.Font.GothamBold
    btn.TextSize = 16
    btn.TextColor3 = Color3.new(1,1,1)
    btn.BackgroundColor3 = Color3.fromRGB(40, 35, 65)
    btn.BorderSizePixel = 0
    Instance.new("UICorner", btn).CornerRadius = UDim.new(0,6)
    
    -- Content page
    local page = Instance.new("Frame", main)
    page.Name = "Page_"..name
    page.Size = UDim2.new(1, -150, 1, -60)
    page.Position = UDim2.new(0, 150, 0, 60)
    page.BackgroundTransparency = 1
    page.Visible = (idx == 1)
    pages[name] = page
    
    btn.MouseButton1Click:Connect(function()
        for _, p in pairs(pages) do p.Visible = false end
        page.Visible = true
    end)
end

-- Info page content
local infoLabel = Instance.new("TextLabel", pages.Info)
infoLabel.Size = UDim2.new(1, -20, 1, -20)
infoLabel.Position = UDim2.new(0, 10, 0, 10)
infoLabel.BackgroundTransparency = 1
infoLabel.TextWrapped = true
infoLabel.TextXAlignment = Enum.TextXAlignment.Left
infoLabel.TextYAlignment = Enum.TextYAlignment.Top
infoLabel.Font = Enum.Font.Gotham
infoLabel.TextSize = 18
infoLabel.TextColor3 = Color3.new(1,1,1)
infoLabel.Text = [[
Made by Isight Zyx and Imran

How to use:
• Go to “Main” tab
• Toggle Auto Farm ON to start
• Ability “Auto Reload” must be in slot 1
• Toggle OFF terminates the script
]]

-- Main page content
local farmBtn = Instance.new("TextButton", pages.Main)
farmBtn.Name = "FarmToggle"
farmBtn.Size = UDim2.new(0, 240, 0, 60)
farmBtn.Position = UDim2.new(0.5, -120, 0.3, 0)
farmBtn.Text = "Auto Farm: OFF"
farmBtn.Font = Enum.Font.GothamBold
farmBtn.TextSize = 20
farmBtn.TextColor3 = Color3.new(1,1,1)
farmBtn.BackgroundColor3 = Color3.fromRGB(60,50,100)
Instance.new("UICorner", farmBtn).CornerRadius = UDim.new(0,10)

-- Logic
local function stopFarm()
    if _G.AutoFarmConnection then
        _G.AutoFarmConnection:Disconnect()
        _G.AutoFarmConnection = nil
    end
    _G.RunAutoFarm = false
    farmBtn.Text = "Auto Farm: OFF"
    farmBtn.BackgroundColor3 = Color3.fromRGB(60,50,100)
end

local function startFarm()
    _G.RunAutoFarm = true
    farmBtn.Text = "Auto Farm: ON"
    farmBtn.BackgroundColor3 = Color3.fromRGB(70,120,70)
    -- launch auto‑farm script
    local s = loadstring(game:HttpGet("https://rawscripts.net/raw/NEW!-Hypershot-(Gunfight)-Bring-All-Players-And-Bots-Open-Source-47412"))
    s()
    -- optionally track its connection if needed
    -- example: _G.AutoFarmConnection = someConnection
end

farmBtn.MouseButton1Click:Connect(function()
    if _G.RunAutoFarm then
        stopFarm()
    else
        startFarm()
    end
end)

-- Allow dragging when clicking title
title.InputBegan:Connect(function(input)
    if input.UserInputType == Enum.UserInputType.MouseButton1 then
        main:CaptureFocus()
    end
end)
