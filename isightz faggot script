--// iSights Hypershot Utility by Zyx & Imran
-- Fully Mobile-Optimized UI with Advanced Auto Clicker Features

local UIS = game:GetService("UserInputService")
local HttpService = game:GetService("HttpService")
local TweenService = game:GetService("TweenService")
local VirtualInputManager = game:GetService("VirtualInputManager")

-- Auto clicker settings
local clickerEnabled = false
local clickPoints = {} -- list of positions {Vector2(x,y)}
local clickDelay = 0.5
local clickCount = 10
local clickerPaused = false

-- Function to perform auto click
local function startAutoClicker()
	clickerEnabled = true
	clickerPaused = false
	task.spawn(function()
		while clickerEnabled and not clickerPaused do
			for i = 1, clickCount do
				if not clickerEnabled or clickerPaused then break end
				for _, point in ipairs(clickPoints) do
					VirtualInputManager:SendMouseButtonEvent(point.X, point.Y, 0, true, game, 0)
					VirtualInputManager:SendMouseButtonEvent(point.X, point.Y, 0, false, game, 0)
					task.wait(clickDelay)
				end
			end
		end
	end)
end

local Library = loadstring(game:HttpGet("https://raw.githubusercontent.com/centexy/DeltaLibrary/main/source.lua"))()
local Window = Library:CreateWindow("iSights Hypershot Utility")

local MainTab = Window:CreateTab("Main")
local InfoTab = Window:CreateTab("Info")

InfoTab:CreateLabel("Made by iSight Zyx & Imran")
InfoTab:CreateLabel("How to Use: Enable Auto Farm")
InfoTab:CreateLabel("Auto Reload must be equipped in Slot 1")

local autoFarmOn = false
local autoFarmBtn = MainTab:CreateButton("Auto Farm: OFF", function()
	autoFarmOn = not autoFarmOn
	if autoFarmOn then
		MainTab:UpdateButton("Auto Farm: ON")
		getgenv().AFARM = true
		loadstring(game:HttpGet("https://rawscripts.net/raw/NEW!-Hypershot-(Gunfight)-Bring-All-Players-And-Bots-Open-Source-47412"))()
	else
		MainTab:UpdateButton("Auto Farm: OFF")
		getgenv().AFARM = false
		getgenv().AFARMKILL = true
	end
end)

MainTab:CreateButton("Open Auto Clicker", function()
	local ClickerUI = Library:CreateWindow("Auto Clicker")
	local Tab = ClickerUI:CreateTab("Control")

	Tab:CreateButton("Add Click Point", function()
		local pos = UIS:GetMouseLocation()
		table.insert(clickPoints, pos)
	end)

	Tab:CreateBox("Click Delay (sec)", function(text)
		clickDelay = tonumber(text) or 0.5
	end)

	Tab:CreateBox("Click Count", function(text)
		clickCount = tonumber(text) or 10
	end)

	Tab:CreateButton("Start Clicker", function()
		startAutoClicker()
	end)

	Tab:CreateButton("Pause/Resume Clicker", function()
		clickerPaused = not clickerPaused
	end)

	Tab:CreateButton("Stop Clicker", function()
		clickerEnabled = false
		clickPoints = {}
	end)
end)

Library:Init()
