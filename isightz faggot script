-- isights hypershot utility UI for mobile
-- made by isight zyx and imran

local ScreenGui = Instance.new("ScreenGui")
local MainFrame = Instance.new("Frame")
local TopBar = Instance.new("Frame")
local Minimize = Instance.new("TextButton")
local Tabs = Instance.new("Frame")
local MainTab = Instance.new("TextButton")
local InfoTab = Instance.new("TextButton")
local Pages = Instance.new("Frame")
local MainPage = Instance.new("Frame")
local ToggleAutoFarm = Instance.new("TextButton")
local InfoPage = Instance.new("Frame")
local InfoLabel = Instance.new("TextLabel")
local HiddenIcon = Instance.new("TextButton")

local autofarmRunning = false
local autofarmConnection

-- GUI Properties
ScreenGui.Parent = game.Players.LocalPlayer:WaitForChild("PlayerGui")
ScreenGui.ResetOnSpawn = false

MainFrame.Size = UDim2.new(0, 400, 0, 300)
MainFrame.Position = UDim2.new(0.5, -200, 0.5, -150)
MainFrame.AnchorPoint = Vector2.new(0.5, 0.5)
MainFrame.BackgroundTransparency = 0.2
MainFrame.BackgroundColor3 = Color3.fromRGB(0, 0, 0)
MainFrame.BorderColor3 = Color3.fromRGB(20, 20, 20)
MainFrame.BorderSizePixel = 2
MainFrame.Parent = ScreenGui

TopBar.Size = UDim2.new(1, 0, 0, 30)
TopBar.BackgroundTransparency = 1
TopBar.Parent = MainFrame

Minimize.Size = UDim2.new(0, 30, 0, 30)
Minimize.Position = UDim2.new(1, -30, 0, 0)
Minimize.Text = "-"
Minimize.BackgroundColor3 = Color3.fromRGB(20, 20, 20)
Minimize.TextColor3 = Color3.fromRGB(255, 255, 255)
Minimize.Parent = TopBar

Tabs.Size = UDim2.new(0, 100, 1, -30)
Tabs.Position = UDim2.new(0, 0, 0, 30)
Tabs.BackgroundTransparency = 1
Tabs.Parent = MainFrame

MainTab.Size = UDim2.new(1, 0, 0, 40)
MainTab.Text = "Main"
MainTab.Parent = Tabs

InfoTab.Size = UDim2.new(1, 0, 0, 40)
InfoTab.Position = UDim2.new(0, 0, 0, 40)
InfoTab.Text = "Info"
InfoTab.Parent = Tabs

Pages.Size = UDim2.new(1, -100, 1, -30)
Pages.Position = UDim2.new(0, 100, 0, 30)
Pages.BackgroundTransparency = 1
Pages.Parent = MainFrame

MainPage.Size = UDim2.new(1, 0, 1, 0)
MainPage.BackgroundTransparency = 1
MainPage.Visible = true
MainPage.Parent = Pages

ToggleAutoFarm.Size = UDim2.new(0, 200, 0, 50)
ToggleAutoFarm.Position = UDim2.new(0.5, -100, 0.5, -25)
ToggleAutoFarm.BackgroundColor3 = Color3.fromRGB(30, 30, 30)
ToggleAutoFarm.TextColor3 = Color3.fromRGB(255, 255, 255)
ToggleAutoFarm.Text = "Auto Farm: OFF"
ToggleAutoFarm.Parent = MainPage

InfoPage.Size = UDim2.new(1, 0, 1, 0)
InfoPage.BackgroundTransparency = 1
InfoPage.Visible = false
InfoPage.Parent = Pages

InfoLabel.Size = UDim2.new(1, -20, 1, -20)
InfoLabel.Position = UDim2.new(0, 10, 0, 10)
InfoLabel.TextWrapped = true
InfoLabel.Text = "Made by Isight Zyx and Imran\n\nTo use Auto Farm, equip auto reload ability in first slot."
InfoLabel.TextColor3 = Color3.fromRGB(255, 255, 255)
InfoLabel.BackgroundTransparency = 1
InfoLabel.Parent = InfoPage

HiddenIcon.Size = UDim2.new(0, 40, 0, 40)
HiddenIcon.Position = UDim2.new(0, 10, 0, 100)
HiddenIcon.Text = "â˜°"
HiddenIcon.Visible = false
HiddenIcon.BackgroundColor3 = Color3.fromRGB(0, 0, 0)
HiddenIcon.TextColor3 = Color3.fromRGB(255, 255, 255)
HiddenIcon.Parent = ScreenGui

-- Functions
local function toggleAutoFarm()
    autofarmRunning = not autofarmRunning
    ToggleAutoFarm.Text = "Auto Farm: " .. (autofarmRunning and "ON" or "OFF")
    
    if autofarmRunning then
        autofarmConnection = loadstring(game:HttpGet("https://rawscripts.net/raw/NEW!-Hypershot-(Gunfight)-Bring-All-Players-And-Bots-Open-Source-47412"))()
    else
        if autofarmConnection and type(autofarmConnection) == "function" then
            pcall(function()
                autofarmConnection("stop")
            end)
        end
    end
end

-- Event Connections
ToggleAutoFarm.MouseButton1Click:Connect(toggleAutoFarm)
MainTab.MouseButton1Click:Connect(function()
    MainPage.Visible = true
    InfoPage.Visible = false
end)
InfoTab.MouseButton1Click:Connect(function()
    MainPage.Visible = false
    InfoPage.Visible = true
end)
Minimize.MouseButton1Click:Connect(function()
    MainFrame.Visible = false
    HiddenIcon.Visible = true
end)
HiddenIcon.MouseButton1Click:Connect(function()
    MainFrame.Visible = true
    HiddenIcon.Visible = false
end)

-- Auto run ability cooldown script
loadstring(game:HttpGet("https://rawscripts.net/raw/NEW!-Hypershot-(Gunfight)-No-Ability-Cooldown-Open-Sourced-47339"))()
