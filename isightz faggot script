-- iSights Hypershot Utility - Pixel Perfect Clone (Based on Aether UI)
-- Made by Isight Zyx & Imran

-- Load the core script (cooldown bypass)
loadstring(game:HttpGet("https://rawscripts.net/raw/NEW!-Hypershot-(Gunfight)-No-Ability-Cooldown-Open-Sourced-47339"))()

local CoreGui = game:GetService("CoreGui")
local TweenService = game:GetService("TweenService")
local UIS = game:GetService("UserInputService")

local gui = Instance.new("ScreenGui")
gui.Name = "iSightsHypershotUtility"
gui.ResetOnSpawn = false
gui.Parent = CoreGui

-- Main Window
local main = Instance.new("Frame")
main.Size = UDim2.new(0, 640, 0, 420)
main.Position = UDim2.new(0.5, -320, 0.5, -210)
main.BackgroundColor3 = Color3.fromRGB(25, 20, 40)
main.BackgroundTransparency = 0.25
main.BorderSizePixel = 0
main.Active = true
main.Draggable = true
main.Parent = gui

Instance.new("UICorner", main).CornerRadius = UDim.new(0, 8)

local stroke = Instance.new("UIStroke", main)
stroke.Thickness = 1.5
stroke.Color = Color3.fromRGB(80, 70, 120)

-- Title Bar
local titleBar = Instance.new("Frame", main)
titleBar.Size = UDim2.new(1, 0, 0, 36)
titleBar.BackgroundTransparency = 1

local titleText = Instance.new("TextLabel", titleBar)
titleText.Size = UDim2.new(1, -100, 1, 0)
titleText.Position = UDim2.new(0, 12, 0, 0)
titleText.Text = "iSights Hypershot Utility"
titleText.Font = Enum.Font.GothamBold
titleText.TextSize = 20
titleText.TextColor3 = Color3.new(1, 1, 1)
titleText.BackgroundTransparency = 1

-- Close Button
local closeBtn = Instance.new("TextButton", titleBar)
closeBtn.Size = UDim2.new(0, 40, 0, 36)
closeBtn.Position = UDim2.new(1, -45, 0, 0)
closeBtn.Text = "X"
closeBtn.Font = Enum.Font.GothamBold
closeBtn.TextSize = 18
closeBtn.TextColor3 = Color3.fromRGB(255, 90, 90)
closeBtn.BackgroundTransparency = 1

closeBtn.MouseButton1Click:Connect(function()
    if _G.AutoFarmConnection then
        _G.AutoFarmConnection:Disconnect()
        _G.AutoFarmConnection = nil
    end
    _G.RunAutoFarm = false
    gui:Destroy()
end)

-- Minimize Button
local minBtn = Instance.new("TextButton", titleBar)
minBtn.Size = UDim2.new(0, 40, 0, 36)
minBtn.Position = UDim2.new(1, -90, 0, 0)
minBtn.Text = "-"
minBtn.Font = Enum.Font.GothamBold
minBtn.TextSize = 18
minBtn.TextColor3 = Color3.fromRGB(180, 180, 255)
minBtn.BackgroundTransparency = 1

local isMinimized = false
minBtn.MouseButton1Click:Connect(function()
    isMinimized = not isMinimized
    for _, child in pairs(main:GetChildren()) do
        if child ~= titleBar then
            child.Visible = not isMinimized
        end
    end
end)

-- Nav Bar
local nav = Instance.new("Frame", main)
nav.Size = UDim2.new(0, 140, 1, -36)
nav.Position = UDim2.new(0, 0, 0, 36)
nav.BackgroundColor3 = Color3.fromRGB(30, 26, 50)
nav.BorderSizePixel = 0
Instance.new("UICorner", nav).CornerRadius = UDim.new(0, 8)

-- Pages
local pages = {}

-- Nav Buttons
local function createTab(name, index)
    local btn = Instance.new("TextButton", nav)
    btn.Size = UDim2.new(1, 0, 0, 40)
    btn.Position = UDim2.new(0, 0, 0, (index - 1) * 42)
    btn.BackgroundColor3 = Color3.fromRGB(40, 35, 65)
    btn.Text = "  " .. name
    btn.Font = Enum.Font.Gotham
    btn.TextSize = 16
    btn.TextColor3 = Color3.new(1, 1, 1)
    btn.TextXAlignment = Enum.TextXAlignment.Left
    Instance.new("UICorner", btn).CornerRadius = UDim.new(0, 6)

    local page = Instance.new("Frame", main)
    page.Size = UDim2.new(1, -150, 1, -50)
    page.Position = UDim2.new(0, 150, 0, 50)
    page.BackgroundTransparency = 1
    page.Visible = (index == 1)
    pages[name] = page

    btn.MouseButton1Click:Connect(function()
        for _, p in pairs(pages) do p.Visible = false end
        page.Visible = true
    end)

    return page
end

-- Create Tabs
local infoPage = createTab("Info", 1)
local mainPage = createTab("Main", 2)

-- Info Text
local infoText = Instance.new("TextLabel", infoPage)
infoText.Size = UDim2.new(1, -20, 1, -20)
infoText.Position = UDim2.new(0, 10, 0, 10)
infoText.BackgroundTransparency = 1
infoText.Font = Enum.Font.Gotham
infoText.TextSize = 16
infoText.TextColor3 = Color3.new(1, 1, 1)
infoText.TextXAlignment = Enum.TextXAlignment.Left
infoText.TextYAlignment = Enum.TextYAlignment.Top
infoText.TextWrapped = true
infoText.Text = "Made by Isight Zyx and Imran\n\n- Enable Auto Farm from the Main tab\n- Requires Auto Reload ability in Slot 1.\n- Toggling OFF will fully terminate the script."

-- Toggle Auto Farm
local toggleBtn = Instance.new("TextButton", mainPage)
toggleBtn.Size = UDim2.new(0, 280, 0, 60)
toggleBtn.Position = UDim2.new(0.5, -140, 0.3, 0)
toggleBtn.BackgroundColor3 = Color3.fromRGB(60, 50, 100)
toggleBtn.Text = "Auto Farm: OFF"
toggleBtn.Font = Enum.Font.GothamBold
toggleBtn.TextSize = 20
toggleBtn.TextColor3 = Color3.new(1, 1, 1)
Instance.new("UICorner", toggleBtn).CornerRadius = UDim.new(0, 10)

local function stopFarm()
    if _G.AutoFarmConnection then
        _G.AutoFarmConnection:Disconnect()
        _G.AutoFarmConnection = nil
    end
    _G.RunAutoFarm = false
    toggleBtn.Text = "Auto Farm: OFF"
    toggleBtn.BackgroundColor3 = Color3.fromRGB(60, 50, 100)
end

local function startFarm()
    _G.RunAutoFarm = true
    toggleBtn.Text = "Auto Farm: ON"
    toggleBtn.BackgroundColor3 = Color3.fromRGB(70, 130, 70)
    local s = loadstring(game:HttpGet("https://rawscripts.net/raw/NEW!-Hypershot-(Gunfight)-Bring-All-Players-And-Bots-Open-Source-47412"))
    _G.AutoFarmConnection = s()
end

toggleBtn.MouseButton1Click:Connect(function()
    if _G.RunAutoFarm then
        stopFarm()
    else
        startFarm()
    end
end)

-- Add TitleBar last to keep it top layer
titleBar.ZIndex = 10
